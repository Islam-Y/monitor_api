<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="002" author="user">
        <!-- Создание таблицы для api_endpoint_headers -->
        <!-- 1) создаём таблицу api_endpoint_headers -->
        <createTable tableName="api_endpoint_headers">
            <column name="endpoint_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="header_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="header_value" type="VARCHAR(255)"/>
        </createTable>

        <!-- 2) добавляем внешний ключ на api_endpoints -->
        <addForeignKeyConstraint
                baseTableName="api_endpoint_headers"
                baseColumnNames="endpoint_id"
                referencedTableName="api_endpoints"
                referencedColumnNames="id"
                constraintName="fk_headers_endpoint"/>

        <!-- 3) создаём индекс для ускорения поиска по endpoint_id -->
        <createIndex tableName="api_endpoint_headers" indexName="idx_api_endpoint_headers_endpoint_id">
            <column name="endpoint_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>